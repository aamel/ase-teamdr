# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /login                     controllers.Account.signIn()
GET     /signup                    controllers.Account.newAccount()
POST    /signup                    controllers.Account.createUser()
GET     /existing                  controllers.Account.checkExistingUser()

# @Bailey, I made an empty Profile class just so that my page had something to redirect towards
GET     /profile                   controllers.Profile.viewProfile()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
